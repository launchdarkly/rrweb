{
  "$schema": "https://turborepo.org/schema.json",
  "tasks": {
    "prepublish": {
      "dependsOn": ["^prepublish"],
      "outputs": [
        "lib/**",
        "es/**",
        "dist/**",
        "typings/**",
        ".svelte-kit/**",
        "types/**"
      ]
    },
    "test": {
      "dependsOn": ["^prepublish"]
    },
    "test:watch": {
      "persistent": true,
      "cache": false
    },
    "test:update": {
      "dependsOn": ["^prepublish"]
    },
    "dev": {
      "dependsOn": ["prepublish", "^prepublish"],
      "persistent": true,
      "cache": false
    },
    "lint": {},
    "check-types": {
      "dependsOn": ["^prepublish"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": [
        "lib/**",
        "es/**",
        "dist/**",
        "typings/**"
      ]
    }
  }
}
